  <script src="../../plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../plugins/jquery-validation/jquery.validate.min.js"></script>
  <script src="../../plugins/jquery-validation/additional-methods.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../dist/js/adminlte.min.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script type="text/javascript">
    const login = () => localStorage.setItem("authorized", "ultroneous")
    $(document).on("click", "#signin", async function (e) {
      e.preventDefault()
      let email = document.getElementById('email').value
      let password = document.getElementById('password').value
      let data = Object.assign({ email }, { password });

      const res = await axios.post('http://localhost:8000/admin/signininquiry', data)
        .then(res => res)
        .catch(error => error)


      if (res.data.status === 'success') {
        window.location.href = ('http://localhost:8000/admin/contactustable')
      } else if (res) {
        alert(res.data.message)
      }
    })

    $(document).on("click", "#send", async function (e) {
      e.preventDefault()
      let email = document.getElementById('email-password').value
      let data=  Object.assign({ email });

      const res = await axios.post('http://localhost:8000/admin/sendforgetpasswordmail', data)
        .then(res => res.data)
        .catch(error => error)

   if(res.status==='success'){
        alert("E-mail send successfully Please check your email.")
        location.reload()
   }else{
      alert("Invaild email.")
   }
    })

  </script>
